<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivReportPhoto"
        android:layout_width="136dp"
        android:layout_height="182dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/samplephoto" />

    <TextView
        android:id="@+id/tvReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivReportPhoto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Falla en luminaria" />

    <TextView
        android:id="@+id/tvCategoryReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/primary_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivReportPhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvReportTitle"
        tools:text="Luminarias" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ivReportPhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryReport"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur rhoncus cursus bibendum. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras pellentesque arcu diam, et imperdiet enim" />
</androidx.constraintlayout.widget.ConstraintLayout>