<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.NewReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtRpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/t_tulo_del_reporte"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTxtRpTitle"
            android:layout_width="367dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:background="#F3EDED"
            android:ems="10"
            android:hint="@string/example"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRpTitle"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/catg"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTxtRpTitle" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/desc"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCatgs" />

        <EditText
            android:id="@+id/editTxtDescription"
            android:layout_width="368dp"
            android:layout_height="98dp"
            android:layout_marginTop="8dp"
            android:background="#F3EDED"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/tellUs"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="154dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:text="@string/tomar_foto"
            app:layout_constraintEnd_toStartOf="@+id/reportImage"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTxtDescription"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnEndRp"
            android:layout_width="154dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:text="@string/terminar_reporte"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reportImage"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFromGallery"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/reportImage"
            android:layout_width="192dp"
            android:layout_height="217dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/imagetaken"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTxtDescription"
            app:layout_constraintVertical_bias="0.422"
            app:srcCompat="@drawable/noimage"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/btnFromGallery"
            android:layout_width="154dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/agregar_foto"
            app:layout_constraintEnd_toStartOf="@+id/reportImage"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTakePhoto"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/txtCatgs"
            android:layout_width="293dp"
            android:layout_height="68dp"
            android:layout_marginTop="20dp"
            android:background="#F3EDED"
            android:hint="@string/noSelection"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/btnSelect"
            app:layout_constraintHorizontal_bias="0.733"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCategory"
            tools:ignore="TextContrastCheck" />

        <ImageButton
            android:id="@+id/btnSelect"
            android:layout_width="66dp"
            android:layout_height="69dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/imagetemplate"
            android:src="@android:drawable/arrow_down_float"
            app:layout_constraintBottom_toTopOf="@+id/txtDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCategory"
            app:layout_constraintVertical_bias="0.431"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>